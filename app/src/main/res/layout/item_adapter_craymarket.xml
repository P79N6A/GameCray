<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_width="160dp"
        android:layout_height="260dp"
        android:background="@drawable/background_item_cray_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cray_portrait"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tv_cray_name"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_selected"
            android:text="名称"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:text="@string/cray_values"/>
            <TextView
                android:id="@+id/tv_cray_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:text="@string/cray_adopt_time"/>
            <TextView
                android:id="@+id/tv_cray_adoption_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:text="@string/cray_reservation_differential"/>
            <TextView
                android:id="@+id/tv_cray_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:text="@string/cray_earnings"/>
            <TextView
                android:id="@+id/tv_cray_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:text="可挖WIA："/>
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:text="可挖DOGE："/>

        <TextView
            android:id="@+id/btn_status"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="預約"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:clickable="true"
            android:textStyle="normal"
            android:background="@drawable/btn_cray_status_bg"/>

    </LinearLayout>
</LinearLayout>